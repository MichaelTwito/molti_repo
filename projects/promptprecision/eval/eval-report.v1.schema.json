{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://promptprecision.local/schemas/eval-report.v1.schema.json",
  "title": "PromptPrecision EvalReport (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "metadata", "task", "inputs", "outputs", "checks", "overallResult"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Optional self-reference to the schema file (path or URL)."
    },
    "schemaVersion": {
      "type": "string",
      "const": "eval-report.v1"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["runId"],
      "properties": {
        "startedAtLocal": { "type": "string" },
        "endedAtLocal": { "type": "string" },
        "elapsedMs": { "type": "integer", "minimum": 0 },
        "evaluator": { "type": "string" },
        "runId": { "type": "string", "minLength": 1 },
        "environment": {
          "type": "object",
          "additionalProperties": true,
          "description": "Free-form environment descriptor (model/app/locale, etc.)."
        }
      }
    },
    "task": {
      "type": "object",
      "additionalProperties": false,
      "required": ["goal"],
      "properties": {
        "taskId": { "type": "string" },
        "taskVersion": { "type": "string" },
        "taskName": { "type": "string" },
        "goal": { "type": "string", "minLength": 1 },
        "promptText": { "type": "string" },
        "taskSpecPath": { "type": "string" }
      }
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "userInputs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "content"],
            "properties": {
              "type": { "type": "string", "enum": ["text", "file"] },
              "content": { "type": "string" },
              "path": { "type": "string" }
            }
          }
        },
        "attachments": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "assumptions": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "outputs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "primaryOutputs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "content"],
            "properties": {
              "type": { "type": "string", "enum": ["json", "text", "file"] },
              "name": { "type": "string" },
              "content": { "type": ["object", "string", "null"] },
              "path": { "type": "string" }
            }
          }
        },
        "sideEffects": { "type": "array" },
        "logs": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "errors": { "type": "array" },
            "warnings": { "type": "array" }
          }
        }
      }
    },
    "checks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "check", "method", "result"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "check": { "type": "string", "minLength": 1 },
          "method": { "type": "string", "enum": ["manual", "auto"] },
          "result": { "type": "string", "enum": ["pass", "fail"] },
          "evidence": { "type": "string" }
        }
      }
    },
    "overallResult": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status"],
      "properties": {
        "status": { "type": "string", "enum": ["PASS", "FAIL"] },
        "severityIfFail": { "type": ["string", "null"], "enum": ["blocker", "major", "minor", null] },
        "reasonIfFail": { "type": ["string", "null"] }
      }
    },
    "timingBreakdown": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "setupMs": { "type": "integer", "minimum": 0 },
        "runMs": { "type": "integer", "minimum": 0 },
        "verificationMs": { "type": "integer", "minimum": 0 }
      }
    },
    "notes": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
